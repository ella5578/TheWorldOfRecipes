        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recipe.RecipeID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.RatingAndCommentID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.RatingAndCommentID">Details</a> |
