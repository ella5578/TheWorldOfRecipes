@page
@model TheWorldOfRecipes.Pages.RatingsAndComments.EditModel

@{
    ViewData["Title"] = "עריכת תגובה";
}

<h1>עריכת תגובה</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RatingAndComment.RatingAndCommentID" />
            <input type="hidden" asp-for="RatingAndComment.UserID" />
            <input type="hidden" asp-for="RatingAndComment.RecipeID" />

            <div class="form-group mb-3">
                <label asp-for="RatingAndComment.Rating" class="control-label"></label>
                <select asp-for="RatingAndComment.Rating" class="form-control">
                    <option value="">בחר דירוג</option>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="RatingAndComment.Rating" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="RatingAndComment.Comment" class="control-label"></label>
                <textarea asp-for="RatingAndComment.Comment" class="form-control"></textarea>
                <span asp-validation-for="RatingAndComment.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="שמור" class="btn btn-primary" />
                <a asp-page="/Recipes/Details" asp-route-id="@Model.RatingAndComment.RecipeID" class="btn btn-secondary">ביטול</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
