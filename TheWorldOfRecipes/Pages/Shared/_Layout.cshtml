                            <div class="d-flex align-items-center ms-3">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <span class="fw-bold text-primary fs-5 ms-4">שלום @User.Identity.Name</span>
                                    <form method="post" asp-area="" asp-page="/Auth/Logout" class="mb-0 ms-3">
                                        <button type="submit" class="btn btn-danger btn-sm">התנתקות</button>
                                    </form>
                                    <form method="post" asp-area="" asp-page="/Auth/DeleteAccount" class="mb-0 ms-2" onsubmit="return confirm('האם אתה בטוח שברצונך למחוק את החשבון? פעולה זו בלתי הפיכה!');">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">מחיקת חשבון</button>
                                    </form>
                                }
                                else
                                {
                                    <a class="btn btn-outline-primary ms-2" href="/Auth/Login">התחברות / הרשמה</a>
                                }
